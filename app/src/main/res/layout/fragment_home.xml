<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context="info.androidhive.materialdesign.activity.HomeFragment"
    >

    <TextView
        android:id="@+id/label"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="45dp"
        android:text="@string/homeTitleDisplay"
        android:textStyle="bold"/>
    <!-- Horizontal Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/horizontal_line_1"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/label"
        android:background="@color/grey"/>
    <!-- ////////////////// Announcement 1 /////////////////// -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_announcement1"
        android:layout_below="@id/horizontal_line_1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/survey_icon_image"
            android:src="@drawable/survey_icon"
            android:clickable="true"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:gravity="center"
            android:id="@+id/announcement1"
            android:layout_below="@id/horizontal_line_1"
            android:text="announcement 1 here" />
    </LinearLayout>
    <!-- Horizontal Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/horizontal_line_2"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/layout_announcement1"
        android:background="@color/grey"/>
    <!-- ////////////////// Announcement 2 /////////////////// -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_announcement2"
        android:layout_below="@id/horizontal_line_2"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/news_icon_image"
        android:src="@drawable/news_icon"
        android:clickable="true"
        android:layout_margin="5dp"
        />


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/text_announcement_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/horizontal_line_2"
            tools:context="info.androidhive.materialdesign.activity.HomeFragment"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:clickable="true"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/static_announcement_2"
            android:text="@string/static_announcement_2_text" />
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:clickable="true"
            android:layout_below="@id/static_announcement_2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:id="@+id/announcement2"
            android:text="@string/placeholder_new_article_title" />

        </RelativeLayout>
    </LinearLayout>
    <!-- Horizontal Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/horizontal_line_3"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/layout_announcement2"
        android:background="@color/grey"/>
    <!--  Large Image of Map -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontal_line_3"
        android:id="@+id/imageView"
        android:src="@drawable/map"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp" />


    <!-- End Announcement2  -->


